---
import { Icon } from "astro-icon";

const links = [
 {
  name: "Github",
  icon: "radix-icons:github-logo",
  link: "https://github.com/brianmstricker",
 },
 {
  name: "LinkedIn",
  icon: "uil:linkedin",
  link: "https://www.linkedin.com/in/brian-stricker-a1559b250/",
 },
 {
  name: "Email",
  icon: "mdi:email",
  link: "mailto:brianmstricker@gmail.com",
 },
];
---

<div>
 <div class="flex gap-5 items-center sm:gap-6">
  {
   links.map((link) => (
    <a
     class={
      "hover:scale-105 duration-200 relative flex items-center justify-center group text-xl"
     }
     href={link.link}
     target="_blank"
     rel="noreferrer"
     aria-label={link.name}
    >
     <span class="text-xs absolute -bottom-6 hidden group-hover:block">
      {link.name}
     </span>
     <Icon name={link.icon} class="text-white w-8 h-8" />
    </a>
   ))
  }
 </div>
</div>
