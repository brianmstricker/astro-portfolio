---
import { Icon } from "astro-icon";

interface Props {
 icons?: boolean;
 small?: boolean;
 index?: boolean;
}
const { icons, small, index } = Astro.props;
const links = [
 {
  name: "Github",
  icon: "radix-icons:github-logo",
  link: "https://github.com/brianmstricker",
 },
 {
  name: "LinkedIn",
  icon: "uil:linkedin",
  link: "https://www.linkedin.com/in/brian-stricker-a1559b250/",
 },
 {
  name: "Email",
  icon: "mdi:email",
  link: "mailto:brianmstricker@gmail.com",
 },
];
---

<div>
 {
  !icons ? (
   <div>
    {links.map((link) => (
     <a
      class="flex items-center justify-between text-2xl py-2 w-[150px] ml-[-110px] hover:ml-0 pl-2 duration-500"
      href={link.link}
      target="_blank"
      rel="noreferrer"
     >
      {link.name} <span class="text-[2rem]">{link.icon}</span>
     </a>
    ))}
   </div>
  ) : (
   <div
    class={"flex gap-5 items-center" + (index ? " sm:gap-6" : " sm:gap-12")}
   >
    {links.map((link) => (
     <a
      class={
       "hover:scale-110 duration-200 relative flex items-center justify-center group" +
       (small ? " text-xl" : " text-3xl")
      }
      href={link.link}
      target="_blank"
      rel="noreferrer"
     >
      <span
       class={
        "text-xs absolute opacity-0 group-hover:opacity-100 duration-300" +
        (index ? " -bottom-4" : " -top-4")
       }
      >
       {link.name}
      </span>
      <Icon name={link.icon} class="text-white w-8 h-8" />
     </a>
    ))}
   </div>
  )
 }
</div>
